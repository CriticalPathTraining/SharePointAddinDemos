@model ProviderHostedAppPartsWeb.Models.SharePointHostWeb

@{ Layout = "~/Views/Shared/_LayoutAppPart.cshtml"; }

<h4>Host Web Properties</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Site Property</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>@Html.DisplayNameFor(model => model.Url)</td>
      <td>@Model.Url</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.Title)</td>
      <td>@Model.Title</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.Id)</td>
      <td>@Model.Id.ToString()</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.SiteTemplate)</td>
      <td>@Model.SiteTemplate</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.Language)</td>
      <td>@Model.Language</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.MasterUrl)</td>
      <td>@Model.MasterUrl</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.CustomMasterUrl)</td>
      <td>@Model.CustomMasterUrl</td>
    </tr>
    <tr>
      <td>@Html.DisplayNameFor(model => model.AlternateCssUrl)</td>
      <td>@Model.AlternateCssUrl</td>
    </tr>
  </tbody>
</table>


@if (Model.Lists.Count() > 0) {

  <h4>Lists in this site</h4>
  <ol>
    @foreach (var list in Model.Lists) {
      <li><a href="@list.DefaultViewUrl" target="_blank">@list.Title</a></li>
    }
  </ol>
}
